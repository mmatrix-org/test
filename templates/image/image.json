[
    {
      "name": "prodcontainer",
      "image": "${app_image}",
      "cpu": ${fargate_cpu},
      "memory": ${fargate_memory},
      "networkMode": "awsvpc",
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/mpulsebackend-prod-blue",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
    },

      "environmentFiles": [
        {
            "value": "arn:aws:s3:::mpulseenv/prod.env",
            "type": "s3"
        }
    ],
      
      "portMappings": [
        {
          "containerPort": ${app_port},
          "hostPort": ${app_port}
        }
      ]
    }
  ]